{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*", "e2e/**/*"],
	"exclude": ["node_modules", "dist"]
}
