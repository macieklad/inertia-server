{
	"name": "inertia-server",
	"version": "0.0.3",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/macieklad/inertia-server.git"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./elysia": {
			"types": "./dist/elysia.d.ts",
			"import": "./dist/elysia.js"
		},
		"./hono": {
			"types": "./dist/hono.d.ts",
			"import": "./dist/hono.js"
		},
		"./types": {
			"types": "./dist/types.d.ts",
			"import": "./dist/types.js"
		},
		"./testing": {
			"types": "./dist/testing.d.ts",
			"import": "./dist/testing.js"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "tsc",
		"test": "bun test",
		"typecheck": "tsc --noEmit",
		"prepack": "node ./scripts/sync-root-readme.mjs prepack",
		"postpack": "node ./scripts/sync-root-readme.mjs postpack"
	},
	"dependencies": {
		"@inertiajs/core": "^2.3.8"
	},
	"peerDependencies": {
		"elysia": ">=1.0.0",
		"hono": ">=4.0.0"
	},
	"peerDependenciesMeta": {
		"elysia": {
			"optional": true
		},
		"hono": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/bun": "latest",
		"elysia": "^1.4.21",
		"@elysiajs/eden": "^1.4.6",
		"hono": "^4.10.4",
		"typescript": "^5.9.3"
	}
}
