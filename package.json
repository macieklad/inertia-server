{
  "name": "inertia-server-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun --cwd apps/example-elysia dev",
    "dev:docs": "bun --cwd apps/docs dev",
    "build": "bun --cwd apps/example-elysia build",
    "start": "bun --cwd apps/example-elysia start",
    "test": "bun --cwd packages/inertia-server test",
    "test:e2e": "bun --cwd apps/example-elysia test:e2e",
    "typecheck": "tsc --build",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "typescript": "^5.9.3"
  }
}
