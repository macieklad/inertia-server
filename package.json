{
	"name": "inertia-server-monorepo",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.3.3",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json,md,mdx}": "biome check --write --no-errors-on-unmatched"
	},
	"scripts": {
		"dev": "FORCE_COLOR=1 bun --elide-lines 0 --filter example-elysia dev",
		"dev:docs": "bun --elide-lines 0 --filter docs dev",
		"build": "bun --filter inertia-server build",
		"test": "bun --filter inertia-server test",
		"test:e2e": "bun --filter example-elysia test:e2e",
		"typecheck": "tsc --build",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "bun run build && changeset publish",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"typescript": "^5.9.3"
	}
}
